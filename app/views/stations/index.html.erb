<%= link_to("Back", :controller => "dashboard") %>

<h1>Station list</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @stations.each() do |printedStation| %>
      <tr>
        <td><%= printedStation.name %></td>
        <td><%= link_to('Edit', edit_station_path(printedStation)) %></td>
        <td><%= link_to('Delete', station_path(printedStation),
          method: :delete,
          data: { confirm: "Are you sure you want to delete the station and rides departing or arriving at this station?" }) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>